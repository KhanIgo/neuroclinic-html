+b(class="b-single-header-row_"+modifier).row
    +b(class="b-single-header_"+modifier)
        +e(class="left_"+modifier)
            +e(class="left-cnt_"+modifier)
                if isClinic
                    include _info-clinic
                else if isDoctor
                    include _info-doctor
                else if isNews
                    include _info-news
                else if isEvent
                    include _info-event
                else 
                    include _info-common
                    
        +e(class="right_"+modifier)
            +e(class="right-cnt_"+modifier)
                if rightImgSrc
                    +e.IMG(src=""+ rightImgSrc).img
        
            